            <p>Enter company details for placement session.</p>

            <form id="companyForm">
              <div class="form-row">
                <div class="form-group" style="flex: 1">
                  <label for="companyName">Company Name</label>
                  <input
                    type="text"
                    id="companyName"
                    placeholder="Enter name"
                  />
                </div>

                <div class="form-group" style="flex: 1">
                  <label for="websiteLink">Company Email</label>
                  <input type="url" id="websiteLink" placeholder="Enter Email" />
                  <!-- <small>*Don't forget to add http:// or https://.</small> -->
                </div>
              </div>

              <div class="form-row">
                <div class="form-group" style="flex: 1">
                  <label for="orgType">Organization Type</label>
                  <select id="orgType">
                    <option value="" disabled selected>
                      -- Select Organization Type --
                    </option>
                    <!-- Options go here -->
                    <option>Private sector</option>
                    <option>Start-up</option>
                    <option>Govt. owned</option>
                    <option>Public sector</option>
                    <option>MNC (Indian or Foreign)</option>
                  </select>
                </div>

                <div class="form-group" style="flex: 1">
                  <label for="industrySector">Industry Sector</label>
                  <select id="industrySector">
                    <option value="" disabled selected>
                      -- Select Industry Sector --
                    </option>
                    <!-- Options go here -->
                    <option>Analytics</option>
                    <option>Consulting</option>
                    <option>Core (Technical)</option>
                    <option>Finance</option>
                    <option>IT</option>
                    <option>Business Development</option>
                    <option>Sales & Marketing</option>
                    <option>Management</option>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="aboutCompany">About Company</label>
                <textarea
                  id="aboutCompany"
                  placeholder="Something about company..."
                ></textarea>
              </div>
            </form>
