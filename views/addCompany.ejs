          <!-- Job Profile Details -->
          <div class="job-profile">
            <h3 class="section-header">Job Profile Details</h3>
            <div class="section-subheader">
              Enter job details for placement session
            </div>
            <div class="form-row">
              <div class="form-group"  style="flex: 1">
                <label for="jobProfile">Job Profile</label>
                <input
                  type="text"
                  id="jobProfile"
                  placeholder="Enter job profile"
                />
              </div>
              <div class="form-group"  style="flex: 1">
                <label for="batch">Passout Batch</label>
                <select id="batch">
                  <option>-- Select Batch --</option>
                  <option value="2024">2024</option>
                  <option value="2025">2025</option>
                </select>
              </div>
            </div>
            <div class="form-row"  style="flex: 1">
              <div class="form-group">
                <label for="recruitment">Recruitment</label>
                <select id="recruitment">
                  <option>-- Select Recruitment --</option>
                  <option value="Internship">Internship</option>
                  <option value="Placement">Placement</option>
                </select>
              </div>
              <div class="form-group"  >
                <label for="dateOfJoining">Tentative Date of Joining</label>
                <input
                  type="text"
                  id="dateOfJoining"
                  placeholder="dd-mm-yyyy"
