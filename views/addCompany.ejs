    <script>
      document
        .getElementById("companyForm")
        .addEventListener("submit", function (event) {
          event.preventDefault();
          let companyName = document.getElementById("companyName").value;
          let websiteLink = document.getElementById("websiteLink").value;
          let orgType = document.getElementById("orgType").value;
          let industrySector = document.getElementById("industrySector").value;
          let aboutCompany = document.getElementById("aboutCompany").value;

          if (
            !companyName ||
            !websiteLink ||
            !orgType ||
            !industrySector ||
            !aboutCompany
          ) {
            alert("Please fill in all fields");
          } else {
            alert("Form submitted successfully");
          }
        });
