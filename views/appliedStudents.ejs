<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Applied Students</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f9fc;
            color: #333;
        }
        .header {
            background-color: #2c3e50;
            color: #fff;
            padding: 15px;
            text-align: center;
        }
        .container {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }
        h2 {
            color: #2c3e50;
            margin-bottom: 20px;
        }
        .student-card {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
        }
        .student-info {
            flex: 1;
        }
        .student-info h3 {
            margin: 0;
            font-size: 18px;
            color: #2c3e50;
        }
        .student-info p {
            margin: 5px 0;
            font-size: 14px;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
        .actions button {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        .view-profile {
            background-color: #3498db;
            color: #fff;
        }
        .shortlist {
            background-color: #2ecc71;
            color: #fff;
        }
        .reject {
            background-color: #e74c3c;
            color: #fff;
        }
        .sidebar {
            width: 200px;
            background-color: #a8bdfa;
            color: #ecf0f1;
            padding-top: 20px;
            position: fixed;
            height: 100%;
            left: 0;
            top: 0;
        }
        .sidebar a {
            display: block;
            padding: 15px;
            color: #ecf0f1;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #4ca3ff;
            border-radius: 20px;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Applied Students</h1>
    </div>
    <aside class="sidebar">
        <ul>
        
          <li><a href="/viewCompanyDetails">View Company</a></li>
          <li><a href="#">Announcements</a></li>
          <li><a href="../otherpages/developer.html">Developer</a></li>
          <li><a href="../otherpages/contact.html">Contact Us</a></li>
          <li><a href="../otherpages/hallOfFame.html">Hall of Fame</a></li>
          <li><a href="../otherpages/Homepage.html">Log Out</a></li>
        </ul>
    </aside>
    <div class="container">
        <h2>Students who applied for [Job Role]</h2>

        <!-- Loop through each student in studentData array -->
        <% studentData.forEach(student => { %>
            <div class="student-card">
                <div class="student-info">
                    <h3><%= student.name %></h3>
                    <p><strong>Email:</strong> <%= student.email %></p>
                    <p><strong>Branch:</strong> <%= student.branch %></p>
                    <p><strong>CGPA:</strong> <%= student.cgpa %></p>
                    <p><strong>Resume:</strong> <a href="<%= student.resume %>" target="_blank">View Resume</a></p>
                    <p><strong>LinkedIn:</strong> <a href="<%= student.linkedinProfile %>" target="_blank">Profile</a></p>
                </div>

                <div class="actions">
                    <% if (student.applicationStatus === 'pending(Applied)') { %>
                        <a href="/shortlist/<%= student.email %>/register/<%=emailIdCompanyCarrier %>">
                            <button class="shortlist">Shortlist</button>
                        </a>
                        <a href="/reject/<%= student.email%>/register/<%=emailIdCompanyCarrier %>">
                            <button class="reject">Reject</button>
                        </a>
                    <% } else if (student.applicationStatus === 'ShortListed') { %>
                        <button class="shortlist">Selected</button>
                    <% } else { %>
                        <button class="reject">Rejected</button>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
