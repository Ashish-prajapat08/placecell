<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      background-color: #ebebeb;
    }
    /* Sidebar styling */
    .sidebar {
      width: 200px;
      background-color: #a8bdfa;
      color: #ecf0f1;
      padding-top: 20px;
      position: fixed;
      height: 100%;
      margin-right: 500px;
    }
    .sidebar a {
      display: block;
      padding: 15px;
      color: #ecf0f1;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #4ca3ff;
      border-radius: 20px;
    }
    /* Main content styling */
    .main-content {
      margin-left: 220px;
      padding: 20px;
      display: flex;
      flex-wrap: wrap;
      border-radius: 30px;
      background-color: white;
    }
    .profile-container {
      display: flex;
      width: 500px;
      margin: 20px auto;
      background-color: #ffffff;
      border-radius: 30px;
      justify-content: center;
      align-items: center;
    }
    /* Profile image section */
    .profile-image-section {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .profile-image {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background-color: #ffffff;
      margin-bottom: 15px;
      text-align: justify;
      margin-top: 8px;
    }
    .profile-image-section h2 {
      font-size: 1.2em;
      color: #34495e;
      margin: 0;
      padding: 1px;
      text-align: center;
    }
    /* Profile details section */
    .profile-details {
      width: 100%;
      padding: 20px;
    }
    .profile-details label {
      font-weight: bold;
      color: #34495e;
      display: block;
      margin-top: 10px;
    }
    .profile-details input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }
    .update-button {
      background-color: #2980b9;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 20px;
      width: 100%;
    }
    .update-button:hover {
      background-color: #3498db;
    }
    .headd {
      color: #2980b9;
      width: 100%;
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/view/studentProfile">View Student</a>
    <a href="/viewCompaniesFromStudent">Company List</a>
    <a href="/applicationStatus">Applied Status</a>
    <!-- <a href="appliedStatus.html">Applied Status</a> -->
    <a href="../otherpages/Homepage.html">Logout</a>
  </div>

  <div class="profile-container">
    <div class="profile-image-section">
      <img src="6833591.png" alt="Profile Image" class="profile-image">
      <h2><%= student.name %></h2>
      <h2><%= student.branch %></h2>
      <h2><%= student.graduationYear %></h2>
    </div>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2 class="headd">Student Profile</h2>
    <form action="/updateStudentDetails" method="post">
      <div class="profile-details" id="profile">
        <label>Name:</label>
        <input type="text" id="name" name="name" value="<%= student.name %>">

        <label>College ID:</label>
        <input type="text" id="collegeId" name="collegeId" value="<%= student.collegeId %>">

        <label>Degree:</label>
        <input type="text" id="degree" name="degree" value="<%= student.degree %>">

        <label>Branch:</label>
        <input type="text" id="branch" name="branch" value="<%= student.branch %>">

        <label>Email:</label>
        <input type="email" id="email" name="email" value="<%= student.email %>">

        <label>Contact:</label>
        <input type="text" id="contact" name="contact" value="<%= student.contact %>">

        <label>CGPA:</label>
        <input type="text" id="cgpa" name="cgpa" value="<%= student.cgpa %>">

        <label>Active Backlogs:</label>
        <input type="text" id="backlogs" name="backlogs" value="<%= student.backlogs %>">

        <label>10th Percentage:</label>
        <input type="text" id="tenthPercentage" name="tenthPercentage" value="<%= student.tenthPercentage %>">

        <label>12th Percentage:</label>
        <input type="text" id="twelfthPercentage" name="twelfthPercentage" value="<%= student.twelfthPercentage %>">

        <label>10th Board:</label>
        <input type="text" id="tenthBoard" name="tenthBoard" value="<%= student.tenthBoard %>">

        <label>12th Board:</label>
        <input type="text" id="twelfthBoard" name="twelfthBoard" value="<%= student.twelfthBoard %>">

        <label>Address:</label>
        <input type="text" id="address" name="address" value="<%= student.address %>">

        <label>City:</label>
        <input type="text" id="city" name="city" value="<%= student.city %>">

        <label>LinkedIn Profile:</label>
        <input type="url" id="linkedinProfile" name="linkedinProfile" value="<%= student.linkedinProfile %>">

        <label>Resume URL:</label>
        <input type="text" id="resume" name="resume" placeholder="Enter resume URL or path" value="<%= student.resume %>">

        <button class="update-button" type="submit">Update Profile</button>
      </div>
    </form>
  </div>
</body>
</html>